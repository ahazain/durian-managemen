generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  nama String 
  email String @unique
  password String
  role Role 

  prediksi Prediksi[]
  absensi Absensi[]
  jadwal JadwalUser[]

}

model JadwalUser{
  userId String
  jadwalId String
  user     User    @relation(fields: [userId], references: [id])
  jadwal   Jadwal  @relation(fields: [jadwalId], references: [id])

  @@id([userId, jadwalId])
}

model Jadwal{
  id String @id @default(uuid())
  deskripsi String
  title String
  tanggal_mulai DateTime
  tanggal_selesai DateTime
  users JadwalUser[]
  absensi Absensi[]

}

model Absensi{
  id String @id @default(uuid())
  tanggal DateTime
  status AbsensiStatus
  verifikasi Boolean @default(false)
  user_id String
  jadwal_id String
  jadwal Jadwal @relation(fields: [jadwal_id], references: [id])
  user User @relation(fields: [user_id], references: [id])
}

model Prediksi{
  id String @id @default(uuid())
  imageUrl String
  user_id String
  kualitas String?
  harga Float?

  user User @relation(fields: [user_id], references: [id])
}
enum AbsensiStatus {
  HADIR
  ALPHA
  TERLAMBAT
}
enum Role {
  ADMIN
  KARYAWAN
}
