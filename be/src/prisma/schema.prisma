generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  nama String 
  email String @unique
  password String
  role Role 

  prediksi Prediksi[]
  absensi Absensi[]
  jadwal Jadwal[]

}


model Jadwal{
  id String @id @default(uuid())
  deskripsi String
  title String
  tanggal_mulai DateTime
  tanggal_selesai DateTime
  id_user String
  user User @relation(fields: [id_user], references: [id])

}

model Absensi{
  id String @id @default(uuid())
  tanggal DateTime
  status AbsensiStatus
  verifikasi Boolean @default(false)
  user_id String
  user User @relation(fields: [user_id], references: [id])
}

model Prediksi{
  id String @id @default(uuid())
  imageUrl String
  user_id String
  kualitas String?
  harga Float?

  user User @relation(fields: [user_id], references: [id])
}
enum AbsensiStatus {
  HADIR
  ALPHA
  TERLAMBAT
}
enum Role {
  ADMIN
  KARYAWAN
}
